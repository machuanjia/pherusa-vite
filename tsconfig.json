{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["assets/*"],
      "@apis/*": ["apis/*"],
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@i18n/*": ["i18n/*"],
      "@layouts/*": ["layouts/*"],
      "@stores/*": ["stores/*"],
      "@styles/*": ["styles/*"],
      "@views/*": ["views/*"],
      "@utils/*": ["utils/*"],
      "@routes/*": ["routes/*"],
      "@interfaces/*": ["interfaces/*"]
    }
  },
  "include": ["./src"],
  "exclude": [
    "build",
    "dist",
    "doc",
    "node_modules",
    "**/*.spec.ts",
    "./dist",
    "**/*.test.ts"
  ]
}
